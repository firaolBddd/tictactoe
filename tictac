void move(char* corr,int arr[4][4]){

         int corr2 = int(corr[0])- 96;
         int corr1 = int(corr[1]) -48;
        if(arr[corr1][corr2]==32){
        if(corr[2]%2 == 0){
                arr[corr1][corr2] = 111;
      }else {
                arr[corr1][corr2]= 120;
        }
        cout<<corr[2];
        }

}
char printboard(int arr[4][4]){


      for(int i = 0; i<4; i++){
                cout<< endl;

              for(int j = 0; j<4; j++){
                        if(i<1 && j>=0|| arr[i][j] == 32|| arr[i][j] == 120|| arr[i][j]== 111){

                        cout<< char(arr[i][j])<< " ";

                                }else{
                                 cout<< arr[i][j];
                         }
                }
}


return 0;
}

